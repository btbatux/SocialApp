<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".CreateProfile">


    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="50dp"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/iv_cp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_add_a_photo_24"
            android:clickable="true"
            android:scaleType="fitCenter" />

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/et_name_cp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:background="@drawable/custom_input"
        android:hint="Name"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/grey" />

    <EditText
        android:id="@+id/et_profession_cp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="7dp"
        android:hint="Profession"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/grey" />

    <EditText
        android:id="@+id/et_bio_cp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="7dp"
        android:hint="Bio"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/grey" />

    <EditText
        android:id="@+id/et_email_cp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:background="@drawable/custom_input"
        android:drawablePadding="7dp"
        android:hint="Phone"
        android:inputType="number"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/grey" />

    <EditText
        android:id="@+id/et_web_cp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:background="@drawable/custom_input"
        android:hint="Social Media Account"
        android:paddingLeft="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/grey" />


    <Button
        android:id="@+id/btn_cp"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_back_selector"
        android:text="Save Profile"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="I am over 18 years old and agree to "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_terms_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="Terms of Service."
            android:textColor="#0065FF"
            android:textStyle="bold" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar_cp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="invisible" />

</LinearLayout>