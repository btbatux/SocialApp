<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/softaqua"
    android:orientation="vertical">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-8648170927904071/2098112316"></com.google.android.gms.ads.AdView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:background="@color/softaqua"
        app:cardElevation="11dp">

        <ImageButton
            android:id="@+id/ib_menu_f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="10dp"
            android:backgroundTint="@color/amp_transparent"
            android:src="@drawable/ic_baseline_menu_24" />


        <ImageButton
            android:id="@+id/ib_edit_f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="10dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:src="@drawable/ic_baseline_edit_24" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="115dp"
            app:cardPreventCornerOverlap="false">

            <ImageView
                android:id="@+id/iv_f1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:scaleType="fitCenter" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_f1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="start"
                android:hint="name"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_prof_f1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:gravity="start"
                android:hint="profession"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/textcolorgrey"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="4dp"
            android:paddingLeft="20dp"
            android:text="Bio"
            android:textColor="@color/textcolorgrey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_bio_f1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:padding="4dp"
            android:paddingLeft="20dp"
            android:text="Bio"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:drawablePadding="20dp"
            android:padding="4dp"
            android:paddingLeft="20dp"
            android:text="Phone Number"
            android:textColor="@color/textcolorgrey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_email_f1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:inputType="phone"
            android:padding="4dp"
            android:text="Phone Number"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:drawablePadding="20dp"
            android:padding="4dp"
            android:paddingLeft="20dp"
            android:text="Website"
            android:textColor="@color/textcolorgrey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_web_f1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:padding="4dp"
            android:text="Website"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp" />


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/softaquacard"
        app:cardCornerRadius="80dip"
        app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/tv_addstories_f1"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:background="@drawable/button_back_selector"
                android:gravity="center"
                android:text="Add Stories"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_sendmessage_f1" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="55dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_sendmessage_f1" /> <!-- Boşluk eklemek için bir View ekleyin -->

            <Button
                android:id="@+id/btn_sendmessage_f1"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_back_selector"
                android:text="Send Message"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_followers_f1"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="84dp"
                android:clickable="true"
                android:drawableStart="@drawable/usericon"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="Followers"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_post_f1"
                app:layout_constraintHorizontal_bias="0.164"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_post_f1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="84dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_baseline_add_photo_alternate_24"
                android:drawablePadding="8dp"
                android:text="Posts"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_newf1"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="40dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_baseline_notifications_active_24"
                android:drawablePadding="8dp"
                android:text="News"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>