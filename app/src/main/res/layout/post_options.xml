    <TextView
        android:id="@+id/edit_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableStart="@drawable/edit_post"
        android:drawablePadding="4dp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:text="Edit Post"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginStart="9dp"
        android:hint="Caption...."
        android:paddingStart="8dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_edit_caption"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:background="@drawable/button_back"
        android:text="Update"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/share_tv_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableStart="@drawable/ic_baseline_share_24"
        android:drawablePadding="5dp"
        android:padding="5dp"
        android:paddingStart="8dp"
        android:text="Share"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/copyurl_tv_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableStart="@drawable/ic_baseline_link_24"
        android:drawablePadding="4dp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:text="Copy Url"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/delete_tv_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableStart="@drawable/delete_red"
        android:drawablePadding="5dp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:text="Delete"
        android:textColor="@color/start"
        android:textSize="20sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/report_tv_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableStart="@drawable/ic_baseline_report_24"
        android:drawablePadding="5dp"
        android:padding="4dp"
        android:paddingStart="8dp"
        android:text="Report Post"
        android:textColor="@color/start"
        android:textSize="20sp"
        android:visibility="visible" />

</LinearLayout>